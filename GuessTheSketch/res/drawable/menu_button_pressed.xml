<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>  
            <shape>
                <gradient 
                    android:startColor="@color/blue_light"
                    android:endColor="@color/blue_light"
                    android:type="linear"
                    android:angle="270"
                    android:centerColor="@color/blue_lighter" />
                <stroke
                    android:width="2dp"
                    android:color="@color/blue_dark" />
                <corners
                    android:radius="5dp" />
            </shape>
        </item>
        <item>  
            <shape>
                <gradient 
                    android:startColor="@color/blue_medium_dark_transparent"
                    android:endColor="@color/blue_medium_light"
                    android:type="radial"
                    android:gradientRadius="200"
                    android:centerColor="@color/blue_medium_light_transparent"
                    android:centerX="0.5"
                    android:centerY="0" />
                <stroke
                    android:width="2dp"
                    android:color="@color/blue_dark" />
                <corners
                    android:radius="5dp" />
            </shape>
        </item>
    </layer-list>
