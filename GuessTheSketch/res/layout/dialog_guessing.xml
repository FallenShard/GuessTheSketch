<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/dialog_guessing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/dialog_title_guessing"
        android:textSize="@dimen/dialog_title_font_size" />
    <TextView
        android:id="@+id/dialog_guessing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/dialog_text_guessing"
        android:textSize="@dimen/menu_font_size"/>

    <Button 
        android:id="@+id/dialog_guessing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_main_menu_blue"
        android:text="@string/dialog_button_ok"
        android:textSize="@dimen/menu_font_size"/>
</LinearLayout>
