<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/text_view_team_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/team_one_text_view_hint"
        android:text="@string/team_one_text_view_hint"
        android:maxLines="1"
        android:maxLength="20"
        android:ems="20" />

    <EditText 
        android:id="@+id/text_view_team_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_view_team_one"
        android:inputType="text"
        android:hint="@string/team_two_text_view_hint"
        android:text="@string/team_two_text_view_hint"
        android:maxLines="1"
        android:maxLength="20"
        android:ems="20" />

    <Button
        style="@style/main_menu_button_style"
        android:id="@+id/button_start_sd_pre_game"
        android:layout_below="@id/text_view_team_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/start_button_text" />

    <Button
        style="@style/main_menu_button_style"
        android:id="@+id/button_back_sd_pre_game"
        android:layout_below="@id/button_start_sd_pre_game"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/back_button_text" />

</RelativeLayout>
