<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/background_tiled" >

    <TextView
        android:id="@+id/dialog_word_picker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/dialog_text_view_word_picker_title"
        android:textColor="#FFFF00"
        android:textSize="@dimen/title_font_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFF00"
        />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal" >

        <TextView
	        android:id="@+id/dialog_word_picker_easy_word"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#FFFFFF"
	        android:textSize="@dimen/menu_font_size" />

        <TextView
            android:id="@+id/dialog_word_picker_easy_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/menu_font_size" />

    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/dialog_word_picker_medium_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/menu_font_size" />

        <TextView
            android:id="@+id/dialog_word_picker_medium_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/menu_font_size" />

    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/dialog_word_picker_hard_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/menu_font_size" />

        <TextView
            android:id="@+id/dialog_word_picker_hard_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/menu_font_size" />

    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/dialog_word_picker_very_hard_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/menu_font_size" />

        <TextView
            android:id="@+id/dialog_word_picker_very_hard_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/menu_font_size" />

    </LinearLayout>

    <Button 
        android:id="@+id/dialog_word_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_main_menu_yellow"
        android:text="@string/dialog_button_ok"
        android:textSize="@dimen/menu_font_size" />

</LinearLayout>
